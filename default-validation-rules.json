{
  "job": "common",
  "validation": {
      "rules": {
          "input-data-checks": {
              "matching-uids": "True",
              "matching-timestamp": "True",
              "matching-processinglevel": "True"
          },
          "output-data-checks": {
              "matching-file-extensions": "png",
              "identical-colors": true,
              "processing-time": "1.1",
              "file-size-check": true,
              "resolution-check": "Match"
          },
          "pixel-checks": {
              "resolution-allow-divergence": 0.5,
              "image-similarity-measures": 1.0
          },
          "color-checks": {
              "threshold": 1.2
          },
          "classification-checks": {
            "matching-boundaries": "0.20",
              "matching-colours": "False",
              "number-of-classes": "Equal",
              "equal-scale": "False"
          },
          "nan-value-check": {
              "allow-nan": true,
              "correct": 0
          }
      }
  }
}